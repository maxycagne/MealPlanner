<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityWelcomePage"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="50dp"
    android:background="@color/sixty">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Live your"
        android:textColor="@color/thirty"
        android:layout_marginBottom="-25dp"
        android:textSize="70sp"
        android:layout_weight="1"
        android:gravity="bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginBottom="-25dp"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Life,"
        android:textColor="@color/ten"
        android:textSize="70sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="-25dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="With a"
        android:textColor="@color/thirty"
        android:textSize="70sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="-25dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Healthy"
        android:textColor="@color/ten"
        android:textSize="70sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="-30dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Lifesyle."
        android:textColor="@color/thirty"
        android:textSize="70sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:boxStrokeColor="@color/thirty"
        android:id="@+id/txtUsernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperText="Insert username to continue"
        android:layout_weight="1"
        app:hintTextColor="@color/black"
        app:helperTextTextAppearance="@font/montserrat_alternates_medium"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/thirty"
            android:fontFamily="@font/montserrat_alternates_medium"/>
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ten"
        app:cardCornerRadius="20dp"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/baseline_keyboard_arrow_right_24"
            app:tint="@color/sixty"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>